<div class="container mx-auto px-4 py-8 space-y-8">
  <h1 class="text-4xl mb-8 text-gray-800">Dashboard</h1>

  <!-- Stats Overview -->
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
    <div class="bg-white p-6 rounded-lg shadow-lg hover:shadow-xl transition-shadow duration-300">
      <div class="flex items-center justify-between">
        <div>
          <h3 class="text-xl text-gray-600 mb-2">Total Projects</h3>
          <p class="text-4xl text-gray-800"><%= @total_projects %></p>
        </div>
        <div class="text-sage text-4xl">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
          </svg>
        </div>
      </div>
    </div>
    <div class="bg-white p-6 rounded-lg shadow-lg hover:shadow-xl transition-shadow duration-300">
      <div class="flex items-center justify-between">
        <div>
          <h3 class="text-xl text-gray-600 mb-2">Total Users</h3>
          <p class="text-4xl text-gray-800"><%= @total_users %></p>
        </div>
        <div class="text-sage text-4xl">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
          </svg>
        </div>
      </div>
    </div>
    <div class="bg-white p-6 rounded-lg shadow-lg hover:shadow-xl transition-shadow duration-300">
      <div class="flex items-center justify-between">
        <div>
          <h3 class="text-xl text-gray-600 mb-2">Total Updates</h3>
          <p class="text-4xl text-gray-800"><%= @total_updates %></p>
        </div>
        <div class="text-sage text-4xl">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
          </svg>
        </div>
      </div>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
    <!-- Recent Projects -->
    <div class="bg-white p-6 rounded-lg shadow-lg hover:shadow-xl transition-shadow duration-300">
      <div class="flex justify-between items-center mb-6">
        <h2 class="text-2xl text-gray-800">Recent Projects</h2>
        <a href="/projects" class="text-sage hover:underline">View all</a>
      </div>
      <div class="space-y-6">
        <% @recent_projects.each do |project| %>
          <div class="border-b border-gray-100 pb-6">
            <h3 class="text-xl text-gray-800 mb-2"><%= project.title %></h3>
            <p class="text-gray-600 mb-3 line-clamp-2"><%= project.description %></p>
            <div class="flex items-center">
              <% if project.user.avatar.present? %>
                <img src="<%= project.user.avatar %>" alt="<%= project.user.display_name %>" class="w-8 h-8 rounded-full mr-3">
              <% end %>
              <span class="text-sm text-gray-500">By <%= project.user.display_name %></span>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Top Rated Projects -->
    <div class="bg-white p-6 rounded-lg shadow-lg hover:shadow-xl transition-shadow duration-300">
      <div class="flex justify-between items-center mb-6">
        <h2 class="text-2xl text-gray-800">Top Rated Projects</h2>
        <a href="/projects" class="text-sage hover:underline">View all</a>
      </div>
      <div class="space-y-6">
        <% @top_rated_projects.each do |project| %>
          <div class="border-b border-gray-100 pb-6">
            <div class="flex justify-between items-center mb-2">
              <h3 class="text-xl text-gray-800"><%= project.title %></h3>
            </div>
            <div class="flex items-center">
              <% if project.user.avatar.present? %>
                <img src="<%= project.user.avatar %>" alt="<%= project.user.display_name %>" class="w-8 h-8 rounded-full mr-3">
              <% end %>
              <span class="text-sm text-gray-500">By <%= project.user.display_name %></span>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Recent Updates -->
  <div class="bg-white p-6 rounded-lg shadow-lg hover:shadow-xl transition-shadow duration-300">
    <h2 class="text-2xl text-gray-800 mb-6">Recent Updates</h2>
    <div class="space-y-6">
      <% @recent_updates.each do |update| %>
        <div class="border-b border-gray-100 pb-6">
          <p class="text-gray-600 mb-4"><%= update.text %></p>
          <div class="flex items-center justify-between">
            <div class="flex items-center">
              <% if update.user.avatar.present? %>
                <img src="<%= update.user.avatar %>" alt="<%= update.user.display_name %>" class="w-8 h-8 rounded-full mr-3">
              <% end %>
              <span class="text-sm text-gray-500"><%= update.user.display_name %></span>
            </div>
            <div>
              <span class="text-sm text-sage"><%= update.project.title %></span>
              <span class="text-xs text-gray-400 ml-2">(<%= time_ago_in_words(update.created_at) %> ago)</span>
            </div>
          </div>
          <% if update.attachment.present? %>
            <div class="mt-4">
              <img src="<%= update.attachment %>" alt="Update attachment" class="rounded-lg max-h-40 object-cover">
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
