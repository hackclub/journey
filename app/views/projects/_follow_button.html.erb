<%= turbo_frame_tag dom_id(project, :follow_button) do %>
  <% if defined?(following) ? following : current_user.project_follows.exists?(project_id: project.id) %>
    <%= button_to unfollow_project_path(project), method: :delete, class: "p-2 bg-vintage-red hover:scale-[1.05] text-white transition-colors duration-300 btn-pixel" do %>
      <%= inline_svg "close.svg", class: "h-6 w-6" %>
    <% end %>
  <% else %>
    <%= button_to follow_project_path(project), class: "p-2 bg-forest hover:scale-[1.05] text-white transition-colors duration-300 btn-pixel" do %>
      <%= inline_svg "plus.svg", class: "h-6 w-6" %>
    <% end %>
  <% end %>
<% end %> 